    <!--eg 2 loops
    <script>
        var count = 0;
        document.write("Starting the Loop ...");
        while (count < 10) {
            if (count == 5) {
                break;
                     }
            document.write("Current Count :  " + count + "<br/>");
             count++;
        }
        document.write("Stopping the Loop ...");
    </script>

       eg 3:

    <h1>In Loop - Iterating a Collection</h1>
    <div id="results">Showing Results here</div>

    <script>
        var numbers = [2, 4, 6, 8, 10];
        let str = ' ';
        for (let x in numbers) {
            str += numbers[x] + "<br/>";
        }
        document.getElementById("results").innerHTML = str;
    </script>
        eg : 4 -->

    <p id="demo"></p>

    <script>
        var flowers = ["Roses", "Lillies", "Jasmines", "Chrysanthimums"];
        let f = " ";
        for (var i of flowers) {
            f += i + "<br/>";
        }
        document.getElementById("demo").innerHTML = f;
    </script>
</body>



