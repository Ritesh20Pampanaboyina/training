using Microsoft.AspNetCore.Mvc;
using System.Collections.Generic;

namespace YourNamespace.Controllers
{
    public class RequestsController : Controller
    {
        // GET: /Requests/AttendanceRequests
        public IActionResult AttendanceRequests()
        {
            // Example data for attendance requests
            var attendanceRequests = new List<AttendanceRequest>
            {
                new AttendanceRequest { EmployeeName = "John Doe", Date = "2024-08-20", Status = "Pending" },
                new AttendanceRequest { EmployeeName = "Jane Smith", Date = "2024-08-21", Status = "Pending" }
            };

            return View(attendanceRequests);
        }

        // GET: /Requests/LeaveRequests
        public IActionResult LeaveRequests()
        {
            // Example data for leave requests
            var leaveRequests = new List<LeaveRequest>
            {
                new LeaveRequest { EmployeeName = "Michael Brown", LeaveType = "Sick Leave", StartDate = "2024-08-20", EndDate = "2024-08-22", Status = "Pending" },
                new LeaveRequest { EmployeeName = "Emily Davis", LeaveType = "Annual Leave", StartDate = "2024-08-25", EndDate = "2024-08-30", Status = "Pending" }
            };

            return View(leaveRequests);
        }

        // POST: /Requests/ApproveAttendanceRequest/5
        [HttpPost]
        public IActionResult ApproveAttendanceRequest(int id)
        {
            // Logic to approve the attendance request
            TempData["Message"] = "Attendance request approved.";
            return RedirectToAction("AttendanceRequests");
        }

        // POST: /Requests/RejectAttendanceRequest/5
        [HttpPost]
        public IActionResult RejectAttendanceRequest(int id)
        {
            // Logic to reject the attendance request
            TempData["Message"] = "Attendance request rejected.";
            return RedirectToAction("AttendanceRequests");
        }

        // POST: /Requests/ApproveLeaveRequest/5
        [HttpPost]
        public IActionResult ApproveLeaveRequest(int id)
        {
            // Logic to approve the leave request
            TempData["Message"] = "Leave request approved.";
            return RedirectToAction("LeaveRequests");
        }

        // POST: /Requests/RejectLeaveRequest/5
        [HttpPost]
        public IActionResult RejectLeaveRequest(int id)
        {
            // Logic to reject the leave request
            TempData["Message"] = "Leave request rejected.";
            return RedirectToAction("LeaveRequests");
        }
    }

    // Models for requests
    public class AttendanceRequest
    {
        public string EmployeeName { get; set; }
        public string Date { get; set; }
        public string Status { get; set; }
    }

    public class LeaveRequest
    {
        public string EmployeeName { get; set; }
        public string LeaveType { get; set; }
        public string StartDate { get; set; }
        public string EndDate { get; set; }
        public string Status { get; set; }
    }
}



