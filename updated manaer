using System;
using System.Collections.Generic;
using System.Linq;
using System.Web;
using System.Web.Mvc;

public class ManagerController : Controller
{
    // GET: Manager/Login
    public ActionResult ManagerLogin()
    {
        return View();
    }

    // POST: Manager/Login
    [HttpPost]
    [ValidateAntiForgeryToken]
    public ActionResult ManagerLogin(string username, string password)
    {
        // Implement login logic here
        if (username == "manager" && password == "password") // Example validation
        {
            return RedirectToAction("ManagerDashboard");
        }

        ModelState.AddModelError("", "Invalid login attempt.");
        return View();
    }

    // GET: Manager/Dashboard
    public ActionResult ManagerDashboard()
    {
        return View();
    }

    // GET: Manager/ViewEmployees
    public ActionResult ViewEmployees()
    {
        // Sample data for demonstration
        var employees = new List<dynamic>
        {
            new { EmployeeID = 1, EmployeeName = "John Doe", Email = "johndoe@example.com", Phone = "123-456-7890", HireDate = DateTime.Now.AddYears(-2), Role = "Developer", Status = "Active" },
            new { EmployeeID = 2, EmployeeName = "Jane Smith", Email = "janesmith@example.com", Phone = "098-765-4321", HireDate = DateTime.Now.AddYears(-1), Role = "Designer", Status = "Active" }
        };
        ViewBag.Employees = employees;
        return View();
    }

    // GET: Manager/ViewPendingAttendance
    public ActionResult ViewPendingAttendance()
    {
        // Sample data for demonstration
        var attendanceRequests = new List<dynamic>
        {
            new { EmployeeName = "John Doe", Date = "2024-08-01", Status = "Pending" },
            new { EmployeeName = "Jane Smith", Date = "2024-08-05", Status = "Pending" }
        };
        ViewBag.AttendanceRequests = attendanceRequests;
        return View();
    }

    // GET: Manager/ViewPendingLeave
    public ActionResult ViewPendingLeave()
    {
        // Sample data for demonstration
        var leaveRequests = new List<dynamic>
        {
            new { EmployeeName = "John Doe", LeaveType = "Sick Leave", StartDate = "2024-08-10", EndDate = "2024-08-15", Status = "Pending" },
            new { EmployeeName = "Jane Smith", LeaveType = "Vacation", StartDate = "2024-08-20", EndDate = "2024-08-25", Status = "Pending" }
        };
        ViewBag.LeaveRequests = leaveRequests;
        return View();
    }
}



@{
    Layout = null; // Set to your layout file if you have one
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Employees</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        /* Add your CSS here or link to a stylesheet */
    </style>
</head>
<body>
    <div class="container mt-4">
        <h2>Employee List</h2>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Employee ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Hire Date</th>
                    <th>Role</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in ViewBag.Employees)
                {
                    <tr>
                        <td>@employee.EmployeeID</td>
                        <td>@employee.EmployeeName</td>
                        <td>@employee.Email</td>
                        <td>@employee.Phone</td>
                        <td>@employee.HireDate.ToShortDateString()</td>
                        <td>@employee.Role</td>
                        <td>@employee.Status</td>
                    </tr>
                }
            </tbody>
        </table>
        <a href="/Manager/ManagerDashboard" class="btn btn-primary">Back to Dashboard</a>
    </div>
</body>
</html>




