        @using (Html.BeginForm("AdminLogin", "Admin", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.Label("username", "Username", new { @class = "control-label" })
                @Html.TextBox("username", null, new { @class = "form-control", required = "required", id = "username" })
            </div>
            <div class="form-group">
                @Html.Label("password", "Password", new { @class = "control-label" })
                @Html.Password("password", null, new { @class = "form-control", required = "required", id = "password" })
