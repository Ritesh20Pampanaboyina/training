@model IEnumerable<ALMSystem2.Models.EmployeeViewModel>

@{
    ViewData["Title"] = "Employee Details";
}

<div class="content">
    <h3>Employee Details</h3>
    <a href="/Admin/CreateNewEmployee" class="btn btn-success">Create New</a>
    
    <table class="table table-striped mt-3">
        <thead>
            <tr>
                <th>EmployeeID</th>
                <th>EmployeeName</th>
                <th>Email</th>
                <th>Phone</th>
                <th>HireDate</th>
                <th>RoleID</th>
                <th>ManagerID</th>
                <th>ProjectID</th>
                <th>LeaveBalance</th>
                <th>No_of_leave</th>
                <th>Emp_status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.EmployeeID</td>
                    <td>@employee.EmployeeName</td>
                    <td>@employee.Email</td>
                    <td>@employee.Phone</td>
                    <td>@employee.HireDate.ToShortDateString()</td>
                    <td>@employee.RoleID</td>
                    <td>@employee.ManagerID</td>
                    <td>@employee.ProjectID</td>
                    <td>@employee.LeaveBalance</td>
                    <td>@employee.No_of_leave</td>
                    <td>@employee.Emp_status</td>
                </tr>
            }
        </tbody>
    </table>
</div>


using System.Collections.Generic;
using System.Linq;
using System.Web.Mvc;
using ALMSystem2.Models;

public class AdminController : Controller
{
    private static List<EmployeeViewModel> employees = new List<EmployeeViewModel>(); // Simulated data store

    // GET: Admin/EmployeeDetails
    public ActionResult EmployeeDetails()
    {
        return View(employees);
    }

    // GET: Admin/CreateNewEmployee
    public ActionResult CreateNewEmployee()
    {
        return View();
    }

    // POST: Admin/CreateNewEmployee
    [HttpPost]
    [ValidateAntiForgeryToken]
    public ActionResult CreateNewEmployee(EmployeeViewModel model)
    {
        if (ModelState.IsValid)
        {
            // Save the new employee data to the simulated data store
            employees.Add(model);
            return RedirectToAction("EmployeeDetails");
        }
        return View(model);
    }
}
