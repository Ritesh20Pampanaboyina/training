public ActionResult EditEmployee(int id)
{
    // Fetch employee data from the database
    var employee = GetEmployeeById(id); // Replace with actual data retrieval logic
    return View(employee);
}

// POST: Admin/EditEmployee
[HttpPost]
[ValidateAntiForgeryToken]
public ActionResult EditEmployee(EmployeeViewModel model)
{
    if (ModelState.IsValid)
    {
        // Update employee data in the database
        UpdateEmployee(model); // Replace with actual update logic
        return RedirectToAction("EmployeeDetails");
    }
    return View(model);
}

// POST: Admin/DeleteEmployee/{id}
[HttpPost]
[ValidateAntiForgeryToken]
public ActionResult DeleteEmployee(int id)
{
    // Delete employee from the database
    DeleteEmployeeById(id); // Replace with actual delete logic
    return RedirectToAction("EmployeeDetails");
}


@model IEnumerable<ALMSystem2.Models.EmployeeViewModel>

@{
    ViewData["Title"] = "Employee Details";
}

<div class="content">
    <h3>Employee Details</h3>
    <a href="/Admin/CreateNewEmployee" class="btn btn-success mb-3">Create New</a>

    <table class="table table-striped mt-3">
        <thead>
            <tr>
                <th>EmployeeID</th>
                <th>EmployeeName</th>
                <th>Email</th>
                <th>Phone</th>
                <th>HireDate</th>
                <th>RoleID</th>
                <th>ManagerID</th>
                <th>ProjectID</th>
                <th>LeaveBalance</th>
                <th>No_of_leave</th>
                <th>Emp_status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.EmployeeID</td>
                    <td>@employee.EmployeeName</td>
                    <td>@employee.Email</td>
                    <td>@employee.Phone</td>
                    <td>@employee.HireDate.ToShortDateString()</td>
                    <td>@employee.RoleID</td>
                    <td>@employee.ManagerID</td>
                    <td>@employee.ProjectID</td>
                    <td>@employee.LeaveBalance</td>
                    <td>@employee.No_of_leave</td>
                    <td>@employee.Emp_status</td>
                    <td>
                        <a href="/Admin/EditEmployee/@employee.EmployeeID" class="btn btn-warning btn-sm">Edit</a>
                        <form action="/Admin/DeleteEmployee/@employee.EmployeeID" method="post" style="display:inline;">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this employee?');">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

